package sale;

import java.util.*;

import product.Database;

import java.sql.*;

public class SaleDAO {
	Connection con=Database.CON;
	
	//매출현황
	public ArrayList<SaleVO>list(){
		ArrayList<SaleVO>array = new ArrayList<>();
		try {
			String sql="select sale_date,code,sum(qnt),price,name "
					+ "from view_sale "
					+ "group by sale_date,code,price,name "
					+ "order by sale_date,code";
			PreparedStatement ps = con.prepareStatement(sql);
			ResultSet rs = ps.executeQuery();
			while (rs.next()) {
				SaleVO vo=new SaleVO();
				vo.setSale_date(null);
			}
		} catch (Exception e) {
			System.out.println("매출현황:"+e.toString());
		}
		return array;
	}
}
