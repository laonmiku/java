package product;

import java.util.*;

import product.ProductVO;

public class Main1{
	public static void main1(String[] args) {

		boolean run = true;
		Scanner scan = new Scanner(System.in);
		ProductDAO dao= new ProductDAO();
		while(run) {
			System.out.println("\n=========================================");
			System.out.println("  1.상품등록|2.상품조회|3.상품목록|4.상품삭제|0.종료");
			System.out.println("=========================================");
			System.out.println("선택>");
			String menu= scan.nextLine();
			switch(menu) {
			case "1" ://등록
				ProductVO vo = new ProductVO();
	        	String code=vo.getCode();
	        	String pcode=scan.nextLine();
	        	if(pcode=="") {
	        		System.out.println("등록을 취소합니다.");
	        		break;
	        	}
	        	String name=vo.getCode();
	        	String pname=scan.nextLine();
	        	if(pname=="") {
	        		System.out.println("등록을 취소합니다.");
	        		break;
	        	}
	        	dao.insert(vo);
	        	System.out.println("교수등록 완료!");
	           break;
			case "2" ://조회
				System.out.print("조회할 상품코드>");
				String code2 = scan.nextLine();
				ProductVO vo2= dao.read(code2);
				if(vo2.getCode()==null) {
					System.out.println(vo2.getCode()+"상품이 존재하지 않습니다.");
				}else {
					System.out.println(vo2.toString());
				}
				break;
			case "3" ://목록
				ArrayList<ProductVO>array=dao.list();
				for(ProductVO vo:array) {
					System.out.println(vo.toString());
				}
				break;
			case "4" ://삭제
				break;
			case "0" :
				System.out.println("프로그램을 종료합니다.");
				run = false;
				break;
			default:
				System.out.println("0~4 메뉴를 입력하세요!");
				break;
			}//switch   
		}//while
	}//method

}
